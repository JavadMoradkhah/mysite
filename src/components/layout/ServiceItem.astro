---
const { title, description } = Astro.props;
---

<div class="relative p-6 bg-dark-lighter border border-dark-lighter rounded-md overflow-hidden">
  <span class="service-border"></span>
  <span class="service-border"></span>
  <span class="service-border"></span>
  <span class="service-border"></span>
  <div>
    <div
      class="w-12 h-12 inline-flex items-center justify-center rounded-full bg-primary bg-opacity-20 text-primary"
    >
      <slot />
    </div>
    <h2 class="text-primary title-font font-bold my-2">{title}</h2>
    <p class="text-gray-400 leading-relaxed text-xs lg:text-base">
      {description}
    </p>
    <a class="mt-1 py-2 flex items-center text-primary text-sm font-medium" href="#">
      <span class="mr-1">Learn More</span>

      <svg class="w-3 h-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
