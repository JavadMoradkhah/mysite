---
const { title, description } = Astro.props;
---

<div class="p-2 lg:p-4 flex">
  <div
    class="w-12 h-12 inline-flex items-center justify-center rounded-full bg-primary bg-opacity-20 text-primary mb-4 flex-shrink-0"
  >
    <slot />
  </div>
  <div class="flex-grow pl-2 lg:pl-6">
    <h2 class="text-gray-800 dark:text-gray-200 lg:text-lg title-font font-bold mb-2">{title}</h2>
    <p class="text-gray-600 dark:text-gray-300 leading-relaxed text-sm lg:text-base">
      {description}
    </p>
  </div>
</div>
