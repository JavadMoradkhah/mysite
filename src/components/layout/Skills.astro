    </div>
    <ul class="grid gap-1 sm:grid-cols-2 md:grid-cols-4 lg:grid-cols-5">
      {
        skills.map(({ iconName, name }) => (
          <li class="p-3 md:p-4 flex items-center bg-dark-lighter rounded-sm">
            <Icon iconName={iconName} className="w-8 h-8" />
